<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.alex.platform.mapper.UserMapper">
    <select id="selectUserList" resultType="org.alex.platform.pojo.UserDO">
        select user_id, username, job_number, sex, is_enable, created_time, real_name from t_user
        <where>
            <if test="userId != null">user_id = #{userId}</if>
            <if test="username != null">and username like concat('%',#{username},'%')</if>
            <if test="jobNumber != null">and job_number = #{jobNumber}</if>
            <if test="sex != null">and sex = #{sex}</if>
            <if test="isEnable != null">and is_enable = #{isEnable}</if>
            <if test="realName != null">and real_name like concat('%',#{realName},'%')</if>
        </where>

    </select>
    <select id="selectUserToLogin" resultType="org.alex.platform.pojo.UserDO" parameterType="org.alex.platform.pojo.UserDO">
        select user_id, username, password, job_number,sex, is_enable, real_name from t_user where username = #{username} and password = #{password}
    </select>
    <select id="selectUserById" resultType="org.alex.platform.pojo.UserDO" parameterType="Integer">
        select user_id, username, password, job_number,sex, is_enable, real_name from t_user where user_id = #{userId}
    </select>
    <select id="selectUserByName" resultType="org.alex.platform.pojo.UserDO" parameterType="String">
        select user_id, username, password, job_number,sex, is_enable, real_name from t_user where username = #{username}
    </select>
    <select id="selectUserByJobNumber" resultType="org.alex.platform.pojo.UserDO" parameterType="Integer">
        select user_id, username, password, job_number,sex, is_enable, real_name from t_user where job_number = #{jobNumber}
    </select>
    <delete id="deleteUser" parameterType="Integer">
        delete from `t_user` where user_id = #{userId}
    </delete>
    <update id="updateUser" parameterType="org.alex.platform.pojo.UserDO">
        update t_user
        <set>
            <if test="password!=null">password=#{password},</if>
            <if test="jobNumber!=null">job_number=#{jobNumber},</if>
            <if test="isEnable!=null">is_enable=#{isEnable},</if>
            <if test="sex!=null">sex=#{sex},</if>
            <if test="updateTime!=null">update_time=#{updateTime},</if>
            <if test="realName!=null">real_name=#{realName},</if>
        </set>
        where user_id = #{userId}
    </update>
    <insert id="insertUser" parameterType="org.alex.platform.pojo.UserDO">
        insert into t_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="jobNumber != null">
                job_number,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="isEnable != null">
                is_enable,
            </if>
            <if test="createdTime != null">
                created_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="realName != null">
                real_name,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="username != null">
                #{username},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="jobNumber != null">
                #{jobNumber},
            </if>
            <if test="sex != null">
                #{sex},
            </if>
            <if test="isEnable != null">
                #{isEnable},
            </if>
            <if test="createdTime != null">
                #{createdTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="realName != null">
                #{realName},
            </if>
        </trim>
    </insert>

</mapper>